{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-clean-order"
  ],
  "ignoreFiles": [
    "**/tokens/*.scss",
    "**/*.html",
    "node_modules/",
    "**/dist/**/*",
    "**/storybook-helpers/**/*"
  ],
  "rules": {
    "at-rule-empty-line-before": [
      "always",
      {
        "ignore": [
          "first-nested",
          "after-comment"
        ],
        "ignoreAtRules": [
          "import",
          "use",
          "else"
        ]
      }
    ],
    "alpha-value-notation": null,
    "block-no-empty": true,
    "color-function-notation": null,
    "color-named": [
      "never",
      {
        "ignore": [
          "inside-function"
        ]
      }
    ],
    "color-no-hex": true,
    "color-no-invalid-hex": true,
    "comment-no-empty": true,
    "comment-empty-line-before": [
      "always",
      {
        "ignore": ["stylelint-commands"]
      }
    ],
    "declaration-empty-line-before": null,
    "declaration-property-unit-allowed-list": {
      "font-size": [
        "rem"
      ]
    },
    "declaration-block-no-duplicate-properties": true,
    "declaration-block-no-redundant-longhand-properties": true,
    "declaration-block-no-shorthand-property-overrides": true,
    "declaration-colon-newline-after": null,
    "declaration-no-important": true,
    "font-family-no-missing-generic-family-keyword": true,
    "font-family-no-duplicate-names": true,
    "function-calc-no-unspaced-operator": true,
    "function-linear-gradient-no-nonstandard-direction": true,
    "function-url-quotes": "always",
    "keyframe-declaration-no-important": true,
    "keyframes-name-pattern": null,
    "length-zero-no-unit": true,
    "max-line-length": null,
    "max-nesting-depth": [
      3,
      {
        "ignore": [
          "blockless-at-rules",
          "pseudo-classes"
        ]
      }
    ],
    "media-feature-name-no-unknown": true,
    "no-descending-specificity": null,
    "no-duplicate-selectors": null,
    "no-empty-source": true,
    "no-eol-whitespace": null,
    "no-invalid-double-slash-comments": true,
    "no-invalid-position-at-import-rule": null,
    "no-missing-end-of-source-newline": null,
    "number-max-precision": null,
    "property-disallowed-list": ["float"],
    "property-no-unknown": true,
    "property-no-vendor-prefix": [
      true,
      {
        "ignoreProperties": [
          "appearance"
        ]
      }
    ],
    "rule-empty-line-before": [
      "always",
      {
        "ignore": [
          "first-nested",
          "after-comment"
        ]
      }
    ],
    "scss/at-extend-no-missing-placeholder": null,
    "scss/at-if-no-null": null,
    "scss/at-mixin-argumentless-call-parentheses": null,
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "mixin",
          "include",
          "extend",
          "for",
          "if",
          "at-root",
          "function",
          "return",
          "content",
          "else",
          "each",
          "error",
          "warn",
          "debug"
        ]
      }
    ],
    "scss/comment-no-empty": null,
    "scss/double-slash-comment-whitespace-inside": null,
    "scss/double-slash-comment-empty-line-before": null,
    "scss/dollar-variable-pattern": null,
    "scss/dollar-variable-empty-line-before": null,
    "scss/operator-no-newline-before": true,
    "scss/operator-no-unspaced": null,
    "scss/no-global-function-names": null,
    "selector-attribute-quotes": "always",
    "selector-id-pattern": null,
    "selector-pseudo-element-colon-notation": "double",
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": [
          "global"
        ]
      }
    ],
    "selector-class-pattern": [
      "(^(((?!(is|has|my))[a-z]+){4,20}(\\-[a-z]+){0,2})(\\_\\_[a-z]+(\\-[a-z]+){0,2})?(\\-\\-[a-z]+(\\-[a-z]+){0,2}){0,2}$)",
      {
        "resolveNestedSelectors": true,
        "message": "Selector should match hyphenated BEM-syntax (http://getbem.com/). State-Classes should be modifiers. (selector-class-pattern)"
      }
    ],
    "selector-pseudo-element-no-unknown": [
      true,
      {
        "ignorePseudoElements": [
          "ng-deep"
        ]
      }
    ],
    "selector-type-no-unknown": true,
    "shorthand-property-no-redundant-values": true,
    "string-no-newline": true,
    "unit-no-unknown": true
  }
}
